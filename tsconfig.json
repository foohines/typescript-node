{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "module": "commonjs",
    "lib": ["es2022"],
    "target": "es2022",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "strict": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
